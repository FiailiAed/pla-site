---
interface Props {
	href: string;
	tailwind: string;
}

const { href, tailwind } = Astro.props;
---

<footer class={tailwind}>
	<span class="grid gap-4 grid-cols-3 grid-rows-1">
		<a href="/resources" class="text-md cursor-pointer rounded-full hover:text-white hover:bg-gradient-to-r hover:from-pink-500 hover:to-yellow-500">
			Resources
		</a>
		<a href="/" class="text-md cursor-pointer rounded-full hover:text-white hover:bg-gradient-to-r hover:from-pink-500 hover:to-yellow-500">
			Home
		</a>
		<a href="/blog" class="text-md cursor-pointer rounded-full hover:text-white hover:bg-gradient-to-r hover:from-pink-500 hover:to-yellow-500">
			Blog
		</a>
	</span>
	<a href={href}> </a>
</footer>

<style>
	footer {
		background: hsla(213.70000000000005, 27%, 81%, 0.5);
		color: rgba(19, 21, 26, 100%);
	}
</style>


