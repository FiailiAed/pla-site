	/>
	-->

	<ViewTransitions />

</Layout>

<style>
	main {
		margin: auto;
		padding: 0.25rem;
		padding-bottom: 2.5rem;
		padding-top: 1rem;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 5.6;
	}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		padding-bottom: 1em;
	}
	h2 {
		font-size: 2rem;
		font-weight: 500;
		line-height: 0.85;
		text-align: center;
		padding-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.display-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
	/*
	.g-cal-iframe {
		border-radius: 0.75rem;
		background: radial-gradient(rgb(196, 181, 253), rgb(209, 213, 219));
	}
	 */
	iframe {
		border-radius: 0.75rem;
		background: radial-gradient(rgb(243 255 243),rgb(255,255,255));
	}
	.info-section {
		padding-bottom: 2.5rem;
	}
	.info-spacer {
		font-size: 1.50rem;
		font-weight: 800;
		line-height: 0.95;
		text-align: center;
		padding-bottom: 1em;
		opacity: 80%;
	}
	.info-heading {
		font-size: 1.50rem;
		font-weight: 800;
		line-height: 0.95;
		text-align: center;
		padding-bottom: 1em;
	}
</style>
